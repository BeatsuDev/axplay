{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "axplay",
    "version": "0.1.0",
    "identifier": "com.ericbs.axplay",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "axplay",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/icon.ico"]
    }
}
